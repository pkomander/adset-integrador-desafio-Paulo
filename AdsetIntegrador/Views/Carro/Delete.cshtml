@model AdsetIntegrador.DTO.Carro.ReadCarroDto

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <table class="table d-lg-table-row">
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Marca)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Modelo)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Ano)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Placa)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Km)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Cor)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Preco)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.ArCondicionado)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Alarme)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Airbag)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.FreioABS)
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.Marca)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Modelo)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Ano)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Placa)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Km)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Cor)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Preco)
                </td>
                <td>
                    @if (@Html.DisplayNameFor(model => model.ArCondicionado) == "ArCondicionado")
                    {
                        <span>Sim</span>
                    }
                    else
                    {
                        <span>Não</span>
                    }
                </td>
                <td>
                    @if (@Html.DisplayNameFor(model => model.Alarme) == "Alarme")
                    {
                        <p class="opcionais">Sim</p>
                    }
                    else
                    {
                        <p class="opcionais">Não</p>
                    }
                </td>
                <td>
                    @if (@Html.DisplayNameFor(model => model.Airbag) == "Airbag")
                    {
                        <p class="opcionais">Sim</p>
                    }
                    else
                    {
                        <p class="opcionais">Não</p>
                    }
                </td>
                <td>
                    @if (@Html.DisplayNameFor(model => model.FreioABS) == "FreioABS")
                    {
                        <p class="opcionais">Sim</p>
                    }
                    else
                    {
                        <p class="opcionais">Não</p>
                    }
                </td>
            </tr>
        </tbody>
    </table>

    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            @for (int i = 0; i < Model.CarroFotos.Count; i++)
            {
                var activeClass = (i == 0) ? "active" : "";
                <div class="carousel-item @activeClass">
                    <img src="~/uploads/@Model.CarroFotos[i].Foto.Nome" class="d-block w-100" alt="Slide @i">
                </div>
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

<br />
